{
    "compilerOptions": {
      "module": "ESNext",
      "target": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "noUnusedLocals": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "outDir": "dist",
      "lib": ["dom", "esnext"],
      "types": ["vite/client", "node"],
      "sourceMap": true,
      "noEmitOnError": true,
    },
    "include": ["src/**/*", "./package.json"],
    "exclude": ["**/dist", "**/node_modules"]
  }