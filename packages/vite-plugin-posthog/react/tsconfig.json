{
    "compilerOptions": {
      "module": "ESNext",
      "target": "esnext",
      "moduleResolution": "Bundler",
      "strict": true,
      "declaration": true,
      "noUnusedLocals": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "outDir": "../dist/react",
      "lib": ["dom", "esnext"],
      // "types": [ "node"],
      "noEmitOnError": true,
    },
    "include": ["src/**/*", "package.json"],
    "exclude": ["**/node_modules"]
  }